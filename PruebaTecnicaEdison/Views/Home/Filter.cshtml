@model PruebaTecnicaEdison.Models.Filter
@{
    ViewData["Title"] = "Filter";
}

<h1>Lista de personas</h1>


@using (Html.BeginForm("Filter", "Home", FormMethod.Post))
{
    @Html.ValidationSummary(true)
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Filterv2">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label class="control-label">Numero de documento</label>
                    <input asp-for="documentNumber" class="form-control" />
                    <span asp-validation-for="documentNumber" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <input type="submit" value="Buscar" class="btn btn-success" />
                </div>
            </form>
        </div>
    </div>
}
<br />
<p>
    <a asp-action="AddPerson">Create Uno</a>
</p>
<br />
@if (ViewBag.People != null)
{
    var modelo = (IEnumerable<PruebaTecnicaEdison.Business.Models.PersonDTO>)ViewBag.People;
    <table class="table">
        <thead>
            <tr>
                <th>
                    Numero de documento
                </th>
                <th>
                    Nombre
                </th>
                <th>
                    Apellido
                </th>
                <th>
                    Direccion
                </th>
                <th>
                    Numero de Telefono
                </th>
                <th>
                    Correo
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in modelo)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.DocumentNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.LastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Address)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Email)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
